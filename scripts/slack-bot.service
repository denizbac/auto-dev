[Unit]
Description=Swarm Control Slack Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/autonomous-claude
Environment="PATH=/autonomous-claude/venv/bin:/usr/local/bin:/usr/bin:/bin"
ExecStart=/autonomous-claude/venv/bin/python -m uvicorn dashboard.slack_bot:app --host 0.0.0.0 --port 8081
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target

