[Unit]
Description=Auto-Dev Agent Runner (All Agents)
Documentation=https://github.com/your-org/auto-dev
After=network.target postgresql.service redis.service autodev-dashboard.service
Wants=postgresql.service redis.service

[Service]
Type=simple
User=autodev
Group=autodev
WorkingDirectory=/auto-dev
Environment=PYTHONUNBUFFERED=1
Environment=PATH=/auto-dev/venv/bin:/usr/local/bin:/usr/bin
EnvironmentFile=-/auto-dev/.env

# Note: For production, prefer running each agent in its own container via docker-compose
# This service runs all agents in a single process (legacy mode)
ExecStart=/auto-dev/venv/bin/python -m watcher.agent_runner --all-agents
ExecReload=/bin/kill -HUP $MAINPID

Restart=always
RestartSec=30
StartLimitInterval=300
StartLimitBurst=5

# Allow longer startup for agent initialization
TimeoutStartSec=120

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=read-only
ReadWritePaths=/auto-dev/data /auto-dev/logs
PrivateTmp=true

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=autodev-agent-runner

[Install]
WantedBy=multi-user.target
