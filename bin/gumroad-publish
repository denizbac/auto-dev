#!/usr/bin/env python3
"""
CLI tool for agents to publish products to Gumroad.

Usage:
    gumroad-publish <product_directory>
    gumroad-publish list
    gumroad-publish test

Examples:
    gumroad-publish /auto-dev/data/projects/github-actions-premium-pack
    gumroad-publish list
"""

import sys
import os

# Add parent directory to path for imports
sys.path.insert(0, os.path.dirname(os.path.dirname(os.path.abspath(__file__))))

from watcher.gumroad_publisher import main
import asyncio

if __name__ == '__main__':
    asyncio.run(main())

